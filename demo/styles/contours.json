{
  "version": 8,
  "name": "Contours",
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "contours": {
      "type": "vector",
      "attribution": "<a href=\"https://github.com/feludwig/pgsql-omt-schema/demo\">&copy; stylesheet: @feludwig</a> <a href=\"https://www2.jpl.nasa.gov/srtm/\">&copy; SRTM data from USGS, NASA</a>",
      "tiles":[ 
        "https://feludwig.github.io/pgsql-omt-schema/demo/tiles/contours/{z}/{x}/{y}.pbf"
      ],
      "maxzoom":15,
      "overzoom":1
    }
  },
  "layers": [
    {
      "id": "contours100",
      "type": "line",
      "source": "contours",
      "source-layer": "heights",
      "filter" : ["to-boolean", ["get","height100"]],
      "layout": {"line-cap": "round", "visibility": "visible"},
      "paint": {
        "line-color": [
          "step", ["zoom"],
          "#9cb197",
          11, "#747b90",
          14, "#855d62"
        ],
        "line-width": 0.7
      }
    },
    {
      "id": "contours50",
      "type": "line",
      "source": "contours",
      "source-layer": "heights",
      "filter" : ["to-boolean", ["get","height50"]],
      "layout": {"line-cap": "round", "visibility": "visible"},
      "paint": {
        "line-color": [
          "step", ["zoom"],
          "transparent",
          11, "#9cb197",
          14, "#747b90"
        ],
        "line-width": 0.6
      }
    },
    {
      "id": "contours10",
      "type": "line",
      "source": "contours",
      "source-layer": "heights",
      "filter" : ["to-boolean", ["get","height10"]],
      "layout": {"line-cap": "round", "visibility": "visible"},
      "paint": {
        "line-color": [
          "step", ["zoom"],
          "transparent",
          14, "#9cb197"
        ],
        "line-width": 0.5
      }
    }
  ]
}
